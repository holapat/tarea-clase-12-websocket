<header>
    <%- include('./partials/encabezado.ejs') %>
</header>
<body>
    <div class="container mt-3">
        <div class="jumbotron">
            <h1 style="color: blue">Ingrese datos</h1>
            <br />
            
            <form onsubmit="return addProduct(this)">
                <div class="form-group">
                    <label for="nombre"><b>Nombre</b></label>
                    <input id="nombre" class="form-control" type="text" name="name" required />
                </div>

                <div class="form-group">
                    <label for="precio"><b>Precio</b></label>
                    <input id="precio"class="form-control" type="number" name="price" required/>
                </div>

                <div class="form-group">
                    <label for="imagen"><b>URL Imagen</b></label>
                    <input id="imagen" class="form-control" type="url" name="img" required />
                </div>

                <button class="btn btn-success mt-3 mb-5" type="submit" value="Enviar">Enviar</button>
            </form>
            <hr>
            
            <%- include('productos.ejs') %>
        </div>
    </div>
    <%- include('chat.ejs') %>
</body>
